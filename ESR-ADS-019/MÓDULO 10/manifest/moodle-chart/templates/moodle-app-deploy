apiVersion: apps/v1
kind: Deployment
metadata:
  name: moodle-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: moodle-app
  template:
    metadata:
      labels:
        app: moodle-app
    spec:
      containers:
        - name: moodle
          image:{{ .Values.moodle.image }}
          env:
            - name: MOODLE_DATABASE_TYPE
              value: {{ .Values.moodle.env.MOODLE_DATABASE_TYPE }}
            - name: MOODLE_DATABASE_HOST
              value: {{ .Values.moodle.env.MOODLE_DATABASE_HOST }}
              # tem que ser nome do Service (sc) do mariadb
            - name: MOODLE_DATABASE_PORT_NUMBER
              value: {{ .Values.moodle.env.MOODLE_DATABASE_PORT_NUMBER }}
            - name: MOODLE_DATABASE_NAME
              value: {{ .Values.moodle.env.MOODLE_DATABASE_NAME }}
            - name: MOODLE_DATABASE_USER
              value: {{ .Values.moodle.env.MOODLE_DATABASE_USER }}
            - name: MOODLE_DATABASE_PASSWORD
              value: {{ .Values.moodle.env.MOODLE_DATABASE_PASSWORD }}
          ports:
            - containerPort: 8080
          volumeMounts:
            - name: data-dir
              mountPath: /bitnami/moodle
      volumes:
        - name: data-dir
          persistentVolumeClaim:
            claimName: moodle-app-pvc